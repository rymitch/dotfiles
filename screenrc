shell -${SHELL}  # dash (-) is for login shells

shelltitle '> |bash'
vbell off
autodetach on
startup_message off 
defscrollback 8192

# Make Mac xterm scrolling work properly with screen.
termcapinfo xterm-color|xterm|xterms|xs|rxvt ti@:te@

hardstatus alwayslastline
hardstatus string "%{= kG} %-w%{= gW}%20> %n %t %{= kG}%+w %{= kG}%-= %=%{kG}%C %A   %D, %M %d, %Y "

bind f eval "hardstatus ignore"
bind F eval "hardstatus alwayslastline"
