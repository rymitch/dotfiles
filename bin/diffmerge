#/usr/bin/env bash

if [ -f /usr/bin/diffmerge ]; then
  DIFFMERGE=/usr/bin/diffmerge
  ARG1=$1
  ARG2=$2
elif [ -f /Applications/DiffMerge.app/Contents/Resources/diffmerge.sh ]; then
  DIFFMERGE=/Applications/DiffMerge.app/Contents/Resources/diffmerge.sh
  ARG1=$1
  ARG2=$2
elif [ -f /cygdrive/c/Program\ Files/SourceGear/Common/DiffMerge/sgdm.exe ]; then
  DIFFMERGE=/cygdrive/c/Program\ Files/SourceGear/Common/DiffMerge/sgdm.exe
  ARG1=`cygpath -aw "$1"`
  ARG2=`cygpath -aw "$2"`
fi

"$DIFFMERGE" "$ARG1" "$ARG2"
