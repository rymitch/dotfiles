#/usr/bin/env bash

DROPBOX=~/Dropbox
if [ -d /Projects/Dropbox ]; then
  DROPBOX=/Projects/Dropbox
fi

REPO=$(basename $(pwd))
NAME=$REPO.`date +%Y%m%d.%H%M%S`

if [ ! -d $DROPBOX ]; then
  echo Error: Cannot find dropbox folder.
  exit 1
fi

FULL=$DROPBOX/Bundles/$NAME
git bundle create $FULL --all
