{{- $app := "/bin/zsh" }}
{{- $app_args := "[\"-l\"]" }}
{{- $font_size := "10" }}
{{- $mod := "Alt" }}
{{- if eq .chezmoi.os "darwin" }}
{{-     $app = "/opt/homebrew/bin/tmux" }}
{{-     $app_args = "[\"new\", \"-A\", \"-s\", \"osx\"]" }}
{{-     $mod = "Command" }}
{{-     $font_size = "14" }}
{{- end -}}

[shell]
program = "{{ $app }}"
args = {{ $app_args }}

[window]
dimensions = { columns = 160, lines = 78 }

[font]
normal = { family = "MesloLGS NF", style = "Regular" }
size = {{ $font_size }}

[env]
TERM = "xterm-256color"
WINIT_X11_SCALE_FACTOR = "1"

[[keyboard.bindings]]
key = "W"
mods = "{{ $mod }}"
chars = "\u0000s"
[[keyboard.bindings]]
key = "E"
mods = "{{ $mod }}"
chars = "\u0000["
[[keyboard.bindings]]
key = "1"
mods = "{{ $mod }}"
chars = "\u00001"
[[keyboard.bindings]]
key = "2"
mods = "{{ $mod }}"
chars = "\u00002"
[[keyboard.bindings]]
key = "3"
mods = "{{ $mod }}"
chars = "\u00003"
[[keyboard.bindings]]
key = "4"
mods = "{{ $mod }}"
chars = "\u00004"
[[keyboard.bindings]]
key = "5"
mods = "{{ $mod }}"
chars = "\u00005"
[[keyboard.bindings]]
key = "6"
mods = "{{ $mod }}"
chars = "\u00006"
[[keyboard.bindings]]
key = "7"
mods = "{{ $mod }}"
chars = "\u00007"
[[keyboard.bindings]]
key = "8"
mods = "{{ $mod }}"
chars = "\u00008"
[[keyboard.bindings]]
key = "T"
mods = "Control|Shift"
chars = "\u0000c"

# Alabaster theme
[colors.primary]
background = '#F7F7F7'
foreground = '#434343'

[colors.cursor]
text = '#F7F7F7'
