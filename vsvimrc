" Change <Leader>
let mapleader=","

" Search options
set hlsearch
set incsearch
set ignorecase
set smartcase
set tw=72

" ` is more useful than ' but less accessible.
nnoremap ' `
nnoremap ` '

" Scroll better.
set scrolloff=3
nnoremap <C-e> 3<C-e>
nnoremap <C-y> 3<C-y>
vnoremap <C-e> 3<C-e>
vnoremap <C-y> 3<C-y>

" Close tab.
nnoremap <C-d> :vsc Window.CloseDocumentWindow<CR>

" Go to definition.
nnoremap <leader>d :vsc Edit.GoToDefinition<CR>

" Clean up usings.
nnoremap <leader>g :vsc EditorContextMenus.CodeWindow.RemoveAndSort<CR>

" Toggle highlighting.
nnoremap <leader>q :nohlsearch<CR>

" Rewrap the current paragraph with Leader-r.
nnoremap <leader>r gq}

" Configure file finder
nnoremap <leader>t :vsc Edit.GoToAll<CR>
